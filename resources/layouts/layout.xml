    <label id="lblPlayer2Name" x="180" y="30" text="P2" />

    <!-- Score of sets -->
    <label id="lblSetsPlayer1" x="50" y="70" text="0" />
    <label id="lblSetsPlayer2" x="180" y="70" text="0" />

